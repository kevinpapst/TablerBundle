{% macro callout(type, description, title, icon) %}
    {% from '@Tabler/components/alert.html.twig' import alert %}
    {% if type is iterable %}
        {% set type = {dismissible: false, important: true}|merge(type) %}
        {{ alert(type) }}
    {% else %}
        {% deprecated "Passing multiple parameters to 'callout()' Tabler macro is deprecated, use options object syntax." %}
        {{ alert({
            type: type,
            description: (description is null ? null : description|trans),
            title: (title is null ? null : title|trans),
            icon: icon,
            dismissible: false,
            important: true
        }) }}
    {% endif %}
{% endmacro %}
