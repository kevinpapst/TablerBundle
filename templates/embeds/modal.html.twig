<div class="modal modal-blur fade {% block modal_class %}{% endblock %}" id="{{ block('modal_id') }}" tabindex="-1" role="dialog" aria-labelledby="{{ block('modal_id') }}_label">
    <div class="modal-dialog {% block modal_size %}modal-lg{% endblock %}" role="document">
        <div class="modal-content">
            {% block modal_before %}{% endblock %}
            <div class="modal-header">
                <h5 class="modal-title" id="{{ block('modal_id') }}_label">{% block modal_title %}{% endblock %}</h5>
                <button type="button" class="btn-close{% if tabler_bundle.isDarkMode() %} btn-close-white{% endif %}" data-bs-dismiss="modal" aria-label="{{ 'Close modal'|trans({}, 'TablerBundle') }}"></button>
            </div>
            <div class="modal-body">
                {% block modal_body %}{% endblock %}
            </div>
            <div class="modal-footer">
                {% block modal_footer %}{% endblock %}
            </div>
            {% block modal_end %}{% endblock %}
        </div>
    </div>
</div>
